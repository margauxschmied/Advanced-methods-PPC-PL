int nbCar=...;
range rangeNbCar=1..nbCar;
float carSize[rangeNbCar]=...;

dvar int+ A[rangeNbCar];

minimize sum(i in rangeNbCar) A[i]*carSize[i];
 
 subject to {
   forall(i in rangeNbCar){
     A[i]==1 || A[i]==-1;
   }
 }
